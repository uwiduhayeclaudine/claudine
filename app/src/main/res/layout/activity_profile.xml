<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aphro10.myapplication.Profile">

    <TextView
        android:text="Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/textProfile" />

    <TextView
        android:text="Firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textProfile"
        android:layout_marginTop="14dp"
        android:layout_marginStart="24dp"
        android:id="@+id/texFirstName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/editLastname"
        android:layout_alignBaseline="@+id/texFirstName"
        android:layout_below="@+id/textProfile"
        android:layout_alignRight="@+id/texFirstName"
        android:layout_marginLeft="40dp"
        android:layout_alignParentEnd="true"
        android:width="200dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_alignBaseline="@+id/textLast"
        android:layout_alignRight="@+id/textLast"
        android:layout_marginLeft="24dp"
        android:width="200dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:id="@+id/editText2" />

    <TextView
        android:text="Last name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texFirstName"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:id="@+id/textLast" />

    <TextView
        android:text="Sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLast"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:id="@+id/textSex" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text=""
        android:ems="10"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_alignBaseline="@+id/textAge"
        android:layout_marginTop="24dp"
        android:layout_alignParentEnd="true"
        android:width="200dp"
        android:id="@+id/editText4" />

    <TextView
        android:text="Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:id="@+id/textAge" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_marginLeft="24dp"
        android:layout_alignBaseline="@+id/textSex"
        android:layout_alignRight="@+id/textSex"
        android:width="200dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="editProfile"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/editText4"
        android:layout_toEndOf="@+id/textProfile" />
</RelativeLayout>
